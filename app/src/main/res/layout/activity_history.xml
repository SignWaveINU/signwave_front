<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- 상단 타이틀 -->
    <TextView
        android:id="@+id/subtitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="표현한 수화가 기록됩니다."
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/subtitleText2"
        app:layout_constraintTop_toBottomOf="@+id/subtitleText2" />

    <TextView
        android:id="@+id/subtitleText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="39dp"
        android:text="Sing wave"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 즐겨찾기 목록 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        app:layout_constraintTop_toBottomOf="@+id/subtitleText">

        <LinearLayout
            android:id="@+id/favoritesLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- 즐겨찾기 항목 (예시) -->
            <LinearLayout
                android:layout_width="343dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:elevation="4dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_edittext_rounded"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="안녕하세요. 저는 김주용입니다."
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <ImageButton
                        android:layout_width="56dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="재생"
                        android:src="@drawable/ic_voice" />
                </LinearLayout>

                <!-- 시간 표시 TextView와 별 아이콘을 오른쪽에 배치 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2025년 3월 13일 1:06"
                        android:textColor="#888888"
                        android:textSize="12sp" />

                    <ImageButton
                        android:background="@drawable/bg_edittext_rounded"
                        android:id="@+id/imageButton1"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="8dp"
                        app:srcCompat="@drawable/ic_record" />
                </LinearLayout>
            </LinearLayout>

            <!-- 추가 항목 예시 -->
            <LinearLayout
                android:layout_width="343dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:elevation="4dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_edittext_rounded"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="감기에 걸렸어요."
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <ImageButton
                        android:layout_width="56dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="재생"
                        android:src="@drawable/ic_voice" />
                </LinearLayout>

                <!-- 시간 표시 TextView와 별 아이콘을 오른쪽에 배치 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2025년 3월 13일 1:07"
                        android:textColor="#888888"
                        android:textSize="12sp" />

                    <ImageButton
                        android:background="@drawable/bg_edittext_rounded"
                        android:id="@+id/imageButton2"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="8dp"
                        app:srcCompat="@drawable/ic_record" />
                </LinearLayout>
            </LinearLayout>

            <!-- 더 많은 항목 추가 가능 -->
        </LinearLayout>
    </ScrollView>

    <!-- 하단 네비게이션 -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/homeButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="홈"
            android:src="@drawable/ic_home" />

        <ImageButton
            android:id="@+id/starButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="즐겨찾기"
            android:src="@drawable/ic_star" />

        <ImageButton
            android:id="@+id/historyButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="기록"
            android:src="@drawable/ic_on_history" />

        <ImageButton
            android:id="@+id/settingsButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="설정"
            android:src="@drawable/ic_calendar" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>